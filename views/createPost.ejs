<%- include('./partials/admin-header') %>

<!-- Page Content -->
<div id="content" class="p-4 p-md-5 pt-5">
  <h2 class="mb-4">Create Post</h2>

  <div class="container">
    <form method="post" action="/create-post">
      <div class="row">
        <div class="col-sm-12">
          <h5>Title</h5>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <input
            type="text"
            name="title"
            class="w-50"
            placeholder="Enter title"
            required
          />
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-sm-12">
          <h5>Content</h5>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <textarea
            name="content"
            rows="5"
            placeholder="Enter Post content"
            required
            class="w-50"
          ></textarea>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <input type="submit" value="Create Post" class="btn btn-primary" />
        </div>
      </div>
    </form>
  </div>
</div>
<% if (typeof message !== 'undefined') { %>
<p style="color: green"><%= message %></p>
<% } %> 

<%- include('./partials/admin-footer') %>
