<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
    <body>
        <%- include('../partials/nav.ejs') %>

        <div class="container">
            <h1>Blog Setup</h1>
            <form action="" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-sm-20">
                        <input type="text" name="blog_title" class="form-control" placeholder="Enter title" required>
                    </div>
                </div>
                <div class="row-mt-3">
                    <div class="col-sm-20">
                        <input type="file" name="blog_logo" class="form-control" required>
                    </div>
                </div>
                <div class="row-mt-3">
                    <div class="col-sm-20">
                        <textarea name="description" class="form-control" placeholder="Enter Description" required></textarea>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-sm-20">
                        <input type="text" name="name" placeholder="Enter Admin name" required>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-sm-20">
                        <input type="text" name="email" placeholder="Enter Email" required>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-sm-20">
                        <input type="text" name="password" placeholder="Enter password" required>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-sm-20">
                        <input type="submit" class="btn btn-primary" value="blog Setup">
                    </div>
                </div>
            </form>
        </div>

        <% 
        if (typeof message !== 'undefined') {
            %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong style="color: red;"><%= message %></strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <%
        }
        %>

        <%- include('../partials/footer.ejs') %>
    </body>
</html>